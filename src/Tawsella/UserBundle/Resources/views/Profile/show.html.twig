{% block documentReady %}
    <script type="text/javascript">
        jQuery(document).ready(function() {
            Layout.init(); // init current layout
            Metronic.init();
            ComponentsPickers.init();
            Layout.initUniform();
            $('.tags').tagsInput({
                width: 'auto',
                'defaultText': '',
                'onAddTag': function() {
                    //alert(1);
                },
            });
            
            
            $("#round-trip").click(function(){
                var isChecked = $('#round-trip').is(':checked'); 
                if(isChecked === true){
                    $('#round-trip-row').show();                    
                }
                else{
                    $('#round-trip-row').hide();                    
                }
                
            });

        });
        </script>
{% endblock %}    