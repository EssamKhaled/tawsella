{% extends "BackendBundle::base.html.twig" %}

{% block main_content %}
    {% for entity in entities %}
        <div class="alert alert-block alert-warning fade in">
            <button type="button" class="close" data-dismiss="alert"></button>
            <h4 class="alert-heading">New Comment Needs your Approval</h4>
            <br>
            <p>{{ entity.commentAuthor }}</p>
            <p>{{ entity.commentContent }}</p>
            <p>
                <a href="#static" class=" btn red" data-toggle="modal" ><i class="icon-remove"></i> Delete</a>
                <a class="btn blue" href="{{ path('comment_approve', { 'id': entity.id } ) }}">Approve</a>
                <div id="static" class="modal hide fade" tabindex="-1" data-backdrop="static" data-keyboard="false">
                    <div class="modal-body">
                        <p>Are you sure you want to Delete this Comment ?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn">No</button>
                        <a href="{{ path('comment_delete', { 'id': entity.id } ) }}"  class="btn red">Yes</a>
                    </div>
                </div>                
            </p>
        </div>
    {% endfor %}
{% endblock %}